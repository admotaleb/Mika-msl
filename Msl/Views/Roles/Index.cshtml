@{
    ViewData["Title"] = "Roles";
}
<a asp-action="Create" class="btn btn-success">Add Role</a>
<a asp-action="Assign" class="btn btn-primary">Assign Role</a>
<a asp-action="AssignUserRole" class="btn btn-secondary">Show User Role</a>
<table class="table table-striped">

    <thead>
        <tr>
            <th>Name</th>
            <th></th>
            <th></th>
            
        </tr>
        </thead>
        <tbody>
        @foreach (var item in ViewBag.Roles)
        {
            <tr>
                <td>@item.Name</td>
               
                    
                    <td> <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a></td>
                    <td> <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
                



            </tr>
        }

    </tbody>
</table>